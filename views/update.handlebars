<article>
  <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
  <h2 class="title mt-5">edit post</h2><hr>
  <form id ="edit-post-form">
    <div class='title mt-5' id="post-id" type="text" value={{post.id}}>
    <label for="postid">post id:{{post.id}}</label>
  </div>
    <div>
        <label for="post-title">post title:</label>
      <input class="input" id="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
        <label for="post-content">post content:</label>
      <input class="input" id="post-content" type="text" value="{{post.contents}}" />
    </div>
    <div class="is-pulled-right">
       created by you on {{format_date post.date_created}}
      |
      <a href="/post/{{post.id}}">{{comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">Save post</button>
    <button type="button" class="button is-danger" id= "delete-post-btn">Delete post</button>
  </form>
</article>

<section class="comments card">
    <div class="card-header">Comments</div>
    {{#if this}}
    {{#each this}}
        <div class="comment">
            <p>{{commentary}}</p>
            <p>&mdash; {{user.username}} on {{format_date date_created}}</p>
        </div>
    {{/each}}
    {{else}}
        <div class="comment">
            <p>There are no comments</p>
        </div>
    {{/if}}
    </div>
</section> 

<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>
